<form action='/' method='POST'>
  <p>
    Input Your Idea Here:
  </p>
  <input type='text' name='idea_title'/><br/>
  <textarea name='idea_description'></textarea><br/>
  <input type='submit'/>
</form>
<h3>Existing Ideas</h3>

<ul>
  <% ideas.each do |idea| %>
    <li>
      <%= idea.title %><br/>
      <%= idea.description %>
    </li>
  <% end %>
</ul>

